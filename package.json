{
  "name": "skaat",
  "version": "0.0.1",
  "description": "A Skat game loop",
  "main": "dist/index.cjs",
  "exports": {
    "import": "./dist/index.es.js",
    "require": "./dist/index.cjs"
  },
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "all": "run-s lint build test",
    "build": "run-s bundle generate-types",
    "bundle": "rollup -c",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:types": "tsc --pretty",
    "generate-types": "tsc src/index.js -d --emitDeclarationOnly --removeComments --allowJs --outDir dist",
    "test": "mocha -r esm",
    "prepublishOnly": "run-s build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nikku/skaat.git"
  },
  "author": "Nico Rehwaldt <https://github.com/nikku>",
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "eslint-plugin-bpmn-io": "^0.12.0",
    "esm": "^3.2.25",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.38.2",
    "rollup-plugin-copy": "^3.3.0",
    "typescript": "^4.1.3"
  }
}
